<% if @image -%>
$("#post, .post-loupe img").attr("src","<%= @image.full_url %>");

$("#post-thumb0").attr("src","<%= @thumbs[0] %>");
$("#post-thumb1").attr("src","<%= @thumbs[1] %>");
$("#post-thumb2").attr("src","<%= @thumbs[2] %>");

$(".post h1").html("<%= escape_javascript(render(partial: 'title')) %>");
gPostPosition = <%= @image.position %>;
gPostId = <%= @image.id %>;

$(".regimes input[type='checkbox']").prop("checked",false);
$(".changes input[type='checkbox']").prop("checked",false);
<% if @image.tags.any? -%>
$('<%= @image.tags.map {|e| "##{dom_id(e)}"}.join(", ") %>').prop("checked",true);
<% end -%>

<% else -%>
alert("No matching post image");
<% end -%>