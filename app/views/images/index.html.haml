%section
	.pre
		%h1 PRE
		%img#pre{src: nil}
		%ul.thumbs#pre-thumbs
			%li
				%button#prev-pre <
			%li.thumb
				%img#pre-thumb0{src: nil}
			%li.thumb.active
				%img#pre-thumb1{src: nil}
			%li.thumb
				%img#pre-thumb2{src: nil}
			%li
				%button#next-pre >
		%h2 Instructions
		%p
			%label Task 1:
			Choose a Post-Storm photo to classify either through the Shuffle or Map button
		%p
			%label Task 2:
			Find a matching Pre-Storm photo
		%p
			%label Task 3:
			Mark all coastal change regimes visible in Post-Storm photo.
		%p
			%label Task 4:
			Mark all visual coastal changes you see in Post-Storm photo.
		
	.post
		%h1 POST
		%img#post{src: nil}
		.actions
			%button#shuffle-post Shuffle
			%button#show-map Map
		%ul.match
			%li
				%input{type: 'checkbox'} Match
		%ul.regimes
			- for tag in @tags.regime
				%li
					%input{type: 'checkbox', id: dom_id(tag), tag_id: tag.id} #{tag.name} Regime
		%ul.changes
			- for tag in @tags.visual
				%li
					%input{type: 'checkbox', id: dom_id(tag), tag_id: tag.id}= tag.name

#map{style: 'display:none'}

