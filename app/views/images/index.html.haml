%section
	.pre
		%h1 PRE
		%img#pre{src: nil}
		%ul.thumbs#pre-thumbs
			%li
				%button#prev-pre <
			%li.thumb
				%img#pre-thumb0{src: nil}
			%li.thumb.active
				%img#pre-thumb1{src: nil}
			%li.thumb
				%img#pre-thumb2{src: nil}
			%li
				%button#next-pre >
		%p
			%label Step 1:
			Select a random location or pick a location on the map to view the post-storm photo in that area
		%p
			%label Step 2:
			Find a matching pre-storm photo and check the box if you found a good photo pair
		%p
			%label Step 3:
			Mark all the coastal hazard regimes and visual coastal changes you see in the post-storm photo.
		
	.post
		%h1 POST
		%img#post{src: nil}
		.actions
			%button#shuffle-post Shuffle
			%button#show-map Map
		%ul.match
			%li
				%input{type: 'checkbox'} Match
		%ul.regimes
			- for tag in @tags.regime
				%li
					%input{type: 'checkbox', id: dom_id(tag), tag_id: tag.id} #{tag.name} Regime
		%ul.changes
			- for tag in @tags.visual
				%li
					%input{type: 'checkbox', id: dom_id(tag), tag_id: tag.id}= tag.name

#map{style: 'display:none'}

