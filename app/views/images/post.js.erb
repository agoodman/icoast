console.log("loading post image <%= @image.full_url %>");
$("#post").attr("src","<%= @image.full_url %>");

gPostPosition = <%= @image.position %>;
gPostId = <%= @image.id %>;

$("#post-thumb0").attr("src","<%= @thumbs[0] %>");
$("#post-thumb1").attr("src","<%= @thumbs[1] %>");
$("#post-thumb2").attr("src","<%= @thumbs[2] %>");

$(".post h1").html("POST-STORM at (<%= @image.latitude %>, <%= @image.longitude %>)");

$(".regimes input[type='checkbox']").prop("checked",false);
$(".changes input[type='checkbox']").prop("checked",false);
<% if (my_tags=@image.tags_for_user(current_user)).any? -%>
$('<%= my_tags.map {|e| "##{dom_id(e)}"}.join(", ") %>').prop("checked",true);
<% end -%>
